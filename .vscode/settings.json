{
  "typescript.tsdk": "node_modules/typescript/lib",
  "eslint.enable": true,
  "search.exclude": {
    "**/.git": true,
    "**/.vscode": true,
    "**/.github": true,
    "**/node_modules": true,
    "**/build": true,
    "yarn.lock": true,
    "package.json": true
  },
  "prettier.configPath": ".prettierrc",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.formatOnSave": true
}
